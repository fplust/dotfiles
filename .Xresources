! URXVT GENERAL CONFIG
!------------------------------------------------
URxvt*iconFile: ~/pictures/icons/terminal1.png
! URxvt.geometry: 80x22
! URXVT FONTS
!------------------------------------------------
! URxvt.font:xft:Terminus-10:hinting=True;antialias=True,xft:WenQuanYi Bitmap Song-10:medium;antialias:False
! URxvt.font:xft:Terminus-10:bold;hinting=True;antialias=True,xft:WenQuanYi Bitmap Song-10:bold;antialias:False
! URxvt.letterSpace:0
URxvt.font:xft:Source Code Pro:size=10,xft:IBM 3270:size=10,xft:WenQuanYi Micro Hei Mono:size=10
! URxvt.font:xft:DejaVu Sans Mono:size=10,xft:WenQuanYi Micro Hei Mono:size=10
! URxvt.letterSpace:-2
URxvt*allow_bold: true
! URXVT FONT SETTINGS
!------------------------------------------------
Xft.autohint: true
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintsfull
! Xft.dpi: 112
Xft.rgba: rgb
Xft.lcdfilter: lcddefault
URxvt.imLocale: en_US.UTF-8
!tabbed,fullscreen
URxvt.perl-ext-common : default,matcher
URxvt.matcher.button: 1
URxvt.url-launcher: chromium
URxvt.url-select.underline: true
!disable the fucking bell
URxvt.insecure: false
! URXVT SCROLLBAR AND CURSOR STYLE
!------------------------------------------------
URxvt*saveLines: 1000
URxvt.scrollBar: false
!URxvt*scrollstyle: plain
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.pointerBlank: true

! URXVT TABS open with tabbed
!------------------------------------------------
!URxvt.tabbed.tabbar-fg: 2
!URxvt.tabbed.tabbar-bg: 0
!URxvt.tabbed.tab-fg: 3
!URxvt.tabbed.tab-bg: 0

! URXVT FULLSCREEN TOGGLE open with fullscreen
!------------------------------------------------
!URxvt.keysym.F11: perl:fullscreen:switch
